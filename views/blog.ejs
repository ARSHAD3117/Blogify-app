<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <title>homePage</title>
  </head>
  <body>
    <%- include("./partials/navbar.ejs") %>
    <div class="container">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImgUrl %>" alt="" width="600px" />
      <p><%= blog.body %></p>
    </div>
    <div class="container">
      <img src="<%- blog.createdBy.profileImg %>" alt="" width="50px" /><%=
      blog.createdBy.fullName %>
    </div>
    <div class="container">
      <h2>Comments (<%- comments.length %>)</h2>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="POST">
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            id="content"
            placeholder="Enter your comment..."
          />
        </div>
        <button class="btn btn-sm btn-primary" type="submit">Add</button>
      </form>
      <% } %>
    </div>

    <div class="container mt-3">
      <% comments.forEach(comment => { %>
      <div class="mb-3">
        <img src="<%- comment.createdBy.profileImg %>" alt="" width="50px" />
        <%= comment.createdBy.fullName %> : <%- comment.content %> <% }) %>
      </div>
    </div>
    <%- include("./partials/script.ejs") %>
  </body>
</html>
